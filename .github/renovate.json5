{
  $schema: 'https://docs.renovatebot.com/renovate-schema.json',
  extends: [
    'github>renovatebot/.github',
  ],
  semanticCommitScope: 'deps',
  automergeType: 'pr',
  prCreation: 'immediate',
  packageRules: [
  {
      matchPackagePatterns: [
        '*',
      ],
      enable: false
    },
    {
      matchPackagePatterns: [
        '^@farmfe/*',
      ],
      groupName: 'farmfe-packages',
      schedule: [
        'after 6pm',
      ],
      enable: true
    }
    
  ],
}
